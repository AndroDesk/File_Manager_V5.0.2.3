<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:background="@drawable/bg_navigation_child"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/pad_category_item_height"
    android:layout_marginStart="@dimen/pad_category_item_margin"
    android:layout_marginEnd="@dimen/pad_category_item_margin"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:textSize="@dimen/pad_category_child_title_size"
        android:textColor="@color/pad_nav_title"
        android:layout_gravity="start|center"
        android:id="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif" />
    <ImageView
        android:layout_gravity="end|center"
        android:id="@id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_recent_expand_collapse" />
</FrameLayout>