<?xml version="1.0" encoding="utf-8"?>
<com.android.fileexplorer.view.EmptyTriggerRelativeLayout
    android:id="@id/root_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <miuix.nestedheader.widget.NestedHeaderLayout
        android:id="@id/nested_header_layout"
        android:clipChildren="false"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/logo"
        app:headerAutoClose="false"
        app:scrollType="offset"
        app:scrollableView="@id/springbacklayout"
        app:selfScrollFirst="false"
        app:stickyView="@id/navi_bar">
        <miuix.springback.view.SpringBackLayout
            android:id="@id/springbacklayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            app:scrollOrientation="vertical|angle"
            app:scrollableView="@android:id/list">
            <androidx.core.widget.NestedScrollView
                android:id="@id/scrollview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:fillViewport="true">
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">
                        <include
                            android:visibility="gone"
                            layout="@layout/layout_empty_view_maml" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.core.widget.NestedScrollView>
            <com.android.fileexplorer.adapter.recycle.BaseRecyclerView
                android:id="@android:id/list"
                android:paddingTop="0.0dip"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:overScrollMode="ifContentScrolls"
                style="@style/RecyclerView_Padding" />
        </miuix.springback.view.SpringBackLayout>
        <include
            android:id="@id/navi_bar"
            layout="@layout/navigation_bar_phone_r" />
    </miuix.nestedheader.widget.NestedHeaderLayout>
    <RelativeLayout
        android:gravity="center_horizontal"
        android:layout_gravity="bottom"
        android:id="@id/ll_add_file"
        android:background="@color/button_view_background"
        android:paddingTop="@dimen/button_padding"
        android:paddingBottom="@dimen/button_padding"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="105.0dip"
        android:layout_marginBottom="52.0dip"
        android:layout_alignParentBottom="true">
        <Button
            android:textSize="@dimen/login_guide_summary_size"
            android:textColor="#e6ffffff"
            android:id="@id/add_private_file"
            android:background="@drawable/btn_bg_cleaner_action"
            android:layout_width="@dimen/common_begin_btn_width"
            android:layout_height="@dimen/common_begin_btn_height"
            android:text="@string/add_private"
            android:fontFamily="mipro-medium"
            android:layout_marginStart="@dimen/common_begin_btn_margin"
            android:layout_marginEnd="@dimen/common_begin_btn_margin" />
    </RelativeLayout>
    <ImageView
        android:id="@id/logo"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/private_logo_height"
        android:layout_marginBottom="@dimen/private_logo_margin_bottom"
        android:src="@drawable/private_logo"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <com.android.fileexplorer.view.FabMenuFunctionLayout
        android:id="@id/fab_function_layout"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />
</com.android.fileexplorer.view.EmptyTriggerRelativeLayout>