<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <miuix.springback.view.SpringBackLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/common_fragment_margin_top"
        app:scrollOrientation="vertical|angle"
        app:scrollableView="@id/category_list">
        <miuix.recyclerview.widget.RecyclerView
            android:id="@id/category_list"
            android:paddingLeft="@dimen/more_category_fragment_padding_horizontal"
            android:paddingRight="@dimen/more_category_fragment_padding_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:overScrollMode="never"
            android:paddingHorizontal="@dimen/more_category_fragment_padding_horizontal" />
    </miuix.springback.view.SpringBackLayout>
</FrameLayout>