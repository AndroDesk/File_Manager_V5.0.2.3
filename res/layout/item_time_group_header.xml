<?xml version="1.0" encoding="utf-8"?>
<com.android.fileexplorer.view.TimeGroupHeaderView
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/common_background_color"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/group_item_margin"
    android:paddingEnd="@dimen/group_item_margin"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:gravity="center_vertical"
        android:id="@id/time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/group_layout_height"
        android:maxLines="1"
        android:layout_weight="1.0"
        style="@style/GroupHeaderTitle" />
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20.0dip">
        <FrameLayout
            android:layout_width="@dimen/select_all_bg_width"
            android:layout_height="@dimen/select_all_bg_height"
            android:layout_marginStart="7.0dip">
            <TextView
                android:ellipsize="end"
                android:layout_gravity="end|center"
                android:id="@id/group_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/GroupHeaderTitle" />
            <TextView
                android:textSize="@dimen/secondary_text_size"
                android:gravity="center"
                android:id="@id/select_text"
                android:background="@drawable/group_select_bg"
                android:visibility="gone"
                android:layout_width="@dimen/select_all_bg_width"
                android:layout_height="@dimen/select_all_bg_height"
                android:text="@string/text_select_all"
                android:maxLines="1"
                android:fontFamily="sans-serif" />
        </FrameLayout>
        <ImageView
            android:id="@id/image_expand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_group_expand"
            android:layout_marginStart="5.0dip" />
    </LinearLayout>
</com.android.fileexplorer.view.TimeGroupHeaderView>