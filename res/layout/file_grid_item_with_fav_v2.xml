<?xml version="1.0" encoding="utf-8"?>
<com.android.fileexplorer.view.FileGridItemWithFav
    android:id="@id/container"
    android:layout_width="72.0dip"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@id/file_image"
        android:layout_width="@dimen/common_grid_item_size"
        android:layout_height="@dimen/common_grid_item_size"
        android:layout_marginStart="@dimen/recent_icon_margin_side"
        android:layout_marginEnd="@dimen/recent_icon_margin_side"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.android.cloud.widget.TransferStatusProgress
        android:id="@id/cloud_trans_progress"
        android:visibility="gone"
        android:layout_width="32.0dip"
        android:layout_height="32.0dip"
        android:layout_marginTop="23.0dip"
        app:layout_constraintEnd_toEndOf="@id/file_image"
        app:layout_constraintStart_toStartOf="@id/file_image"
        app:layout_constraintTop_toTopOf="@id/file_image"
        app:tsp_max="100"
        app:tsp_progressColor="#ffffffff"
        app:tsp_roundColor="#99ffffff"
        app:tsp_roundWidth="2.5dip"
        app:tsp_startAngle="-90"
        app:tsp_style="STROKE"
        app:tsp_viewMode="0" />
    <ImageView
        android:id="@id/video_tag"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/grid_video_icon"
        android:layout_marginStart="7.0dip"
        app:layout_constraintBottom_toBottomOf="@id/file_image"
        app:layout_constraintStart_toStartOf="@id/file_image" />
    <ImageView
        android:id="@id/favorite_tag"
        android:visibility="gone"
        android:layout_width="14.0dip"
        android:layout_height="14.0dip"
        android:src="@drawable/ic_fav_tag"
        android:layout_marginEnd="4.0dip"
        app:layout_constraintBottom_toBottomOf="@id/file_source"
        app:layout_constraintEnd_toStartOf="@id/app_icon"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/file_source" />
    <com.android.fileexplorer.view.RoundedImageView
        android:id="@id/app_icon"
        android:visibility="gone"
        android:layout_width="14.0dip"
        android:layout_height="14.0dip"
        android:scaleType="fitXY"
        android:layout_marginEnd="4.0dip"
        app:layout_constraintBottom_toBottomOf="@id/file_source"
        app:layout_constraintEnd_toStartOf="@id/cloud_state"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/favorite_tag"
        app:layout_constraintTop_toTopOf="@id/file_source"
        app:riv_corner_radius="@dimen/app_icon_radius" />
    <ImageView
        android:id="@id/cloud_state"
        android:layout_width="14.0dip"
        android:layout_height="14.0dip"
        android:src="@drawable/ic_file_state_cloud"
        android:layout_marginEnd="4.0dip"
        app:layout_constraintBottom_toBottomOf="@id/file_source"
        app:layout_constraintEnd_toStartOf="@id/file_source"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/app_icon"
        app:layout_constraintTop_toTopOf="@id/file_source" />
    <TextView
        android:textSize="@dimen/group_grid_file_source_text_size"
        android:textColor="@color/group_file_source_color"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:id="@id/file_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/group_grid_file_source_margin"
        android:text="@string/category_cloud_drive"
        android:maxLines="1"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cloud_state"
        app:layout_constraintTop_toBottomOf="@id/file_create_time" />
    <CheckBox
        android:theme="@style/Checkbox_NewStyle_grid"
        android:id="@android:id/checkbox"
        android:focusable="false"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/group_grid_stub_checkbox_margin_bottom"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@id/file_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:textSize="@dimen/file_grid_name_size"
        android:textColor="@color/text_color_primary"
        android:gravity="center_horizontal"
        android:id="@id/file_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/group_grid_file_name_margin"
        android:maxLines="2"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/file_image" />
    <TextView
        android:textSize="@dimen/group_grid_file_source_text_size"
        android:textColor="@color/group_file_source_color"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:id="@id/file_create_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/group_grid_file_source_margin"
        android:text="@string/category_cloud_drive"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/file_name" />
</com.android.fileexplorer.view.FileGridItemWithFav>