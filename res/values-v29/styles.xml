<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NoteTheme.WidgetList.Activity" parent="@style/MiuixTheme.DayNight.NoTitle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle.NoTitle</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor</item>
        <item name="android:actionModeStyle">@style/ActionMode.NoDivider</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="colorDividerLine">@android:color/transparent</item>
        <item name="immersionMenuEnabled">true</item>
        <item name="windowSearchMask">@drawable/search_mask</item>
    </style>
    <style name="Theme.FileActivity" parent="@style/Theme.NoTitle">
        <item name="android:forceDarkAllowed">false</item>
        <item name="immersionMenuEnabled">true</item>
    </style>
    <style name="Theme.FileActivity.New" parent="@style/Theme.DayNight.Navigator">
        <item name="android:forceDarkAllowed">false</item>
        <item name="immersionMenuEnabled">true</item>
    </style>
    <style name="Theme.FileExplorerTab.NoTitle" parent="@style/Theme.DayNight.NoTitle">
        <item name="android:forceDarkAllowed">false</item>
        <item name="immersionMenuEnabled">true</item>
    </style>
    <style name="Theme.Light.Activity" parent="@style/Theme.Light.Base">
        <item name="android:forceDarkAllowed">false</item>
    </style>
    <style name="Theme.Light.NoTitle.Activity" parent="@style/Theme.NoTitle">
        <item name="android:forceDarkAllowed">false</item>
    </style>
    <style name="Theme.ViewLarge" parent="@style/Theme.Dark">
        <item name="android:forceDarkAllowed">false</item>
        <item name="actionBarExpandBackground">@drawable/bottom_bar</item>
        <item name="actionBarMovableLayoutStyle">@style/Widget.ActionBarMovableLayout</item>
        <item name="actionBarSplitBackground">@drawable/bottom_bar</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowSplitActionBar">true</item>
    </style>
    <style name="Widget.ActionBarButtonIconStyle" parent="@style/Widget">
        <item name="android:layout_width">26.0dip</item>
        <item name="android:layout_height">26.0dip</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>
    <style name="Widget.ActionEndMenuButtonIconStyle" parent="@style/Widget">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>
    <style name="Widget.ActionMode.Button" parent="@android:style/Widget.Button">
        <item name="android:textAppearance">@style/Miuix.AppCompat.TextAppearance.Widget.ActionMode.Title.Button</item>
        <item name="android:textSize">@dimen/miuix_appcompat_secondary_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">0.0dip</item>
        <item name="android:minHeight">0.0dip</item>
        <item name="android:text">@android:string/cancel</item>
        <item name="android:singleLine">true</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>
    <style name="Widget.Button" parent="@android:style/Widget.Button">
        <item name="android:textAppearance">@style/Miuix.AppCompat.TextAppearance.Widget.Button</item>
        <item name="android:textSize">@dimen/miuix_appcompat_button_text_size</item>
        <item name="android:textColor">?textColorButton</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">?buttonBackground</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>
    <style name="Widget.CompoundButton.CheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:textSize">@dimen/miuix_appcompat_secondary_text_size</item>
        <item name="android:textColor">?checkableButtonTextColorSingle</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">0.0dip</item>
        <item name="android:button">?android:listChoiceIndicatorMultiple</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="buttonCompat">?checkBoxButtonCompat</item>
    </style>
    <style name="Widget.CompoundButton.RadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:textSize">@dimen/miuix_appcompat_secondary_text_size</item>
        <item name="android:textColor">?checkableButtonTextColorSingle</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">0.0dip</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>
    <style name="search_result_detail_fragment" parent="@style/Theme.Light.Base">
        <item name="android:actionBarStyle">@style/ActionBarStyle.ActionBarTitle</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="colorDividerLine">@android:color/transparent</item>
        <item name="immersionMenuEnabled">false</item>
    </style>
    <style name="search_result_fragment" parent="@style/Theme.Light.Base">
        <item name="android:actionBarStyle">@style/ActionBarStyle.None</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="colorDividerLine">@android:color/transparent</item>
        <item name="immersionMenuEnabled">false</item>
    </style>
</resources>
