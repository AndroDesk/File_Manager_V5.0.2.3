<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/category_file_icon_bg_phone"
    android:paddingLeft="8.0dip"
    android:paddingTop="8.0dip"
    android:paddingRight="8.0dip"
    android:paddingBottom="8.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingHorizontal="8.0dip"
    android:paddingVertical="8.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@id/category_icon"
        android:layout_width="@dimen/home_page_category_icon_size"
        android:layout_height="@dimen/home_page_category_icon_size"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:textSize="14.0sp"
        android:textColor="@color/category_entry_title_color"
        android:ellipsize="end"
        android:id="@id/category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:fontFamily="sans-serif-medium"
        android:layout_marginStart="6.0dip"
        app:layout_constraintBottom_toBottomOf="@id/category_icon"
        app:layout_constraintStart_toEndOf="@id/category_icon"
        app:layout_constraintTop_toTopOf="@id/category_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>