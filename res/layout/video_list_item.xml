<?xml version="1.0" encoding="utf-8"?>
<com.android.fileexplorer.view.VideoListItemV2
    android:layout_height="wrap_content"
    android:minHeight="@dimen/group_list_file_item_height"
    style="@style/GroupListItemStyle"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@id/file_icon"
        android:layout_width="@dimen/category_file_icon_size"
        android:layout_height="@dimen/category_file_icon_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@id/favorite"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/group_grid_fav_margin"
        android:src="@drawable/ic_fav"
        android:importantForAccessibility="no"
        android:layout_marginStart="@dimen/group_grid_fav_margin"
        app:layout_constraintStart_toStartOf="@id/file_icon"
        app:layout_constraintTop_toTopOf="@id/file_icon" />
    <TextView
        android:ellipsize="middle"
        android:id="@id/file_name"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/group_list_file_name_margin_top"
        android:maxLines="1"
        android:layout_marginStart="@dimen/group_list_file_name_margin_start"
        android:layout_marginEnd="@dimen/common_file_size_margin_end"
        app:layout_constraintBottom_toTopOf="@id/file_summary"
        app:layout_constraintEnd_toStartOf="@android:id/checkbox"
        app:layout_constraintStart_toEndOf="@id/file_icon"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/FileTextAppearance.FileName" />
    <TextView
        android:ellipsize="end"
        android:id="@id/file_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2.0dip"
        android:layout_marginBottom="@dimen/group_list_file_name_margin_top"
        android:maxLines="2"
        android:layout_marginEnd="@dimen/common_file_size_margin_end"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@android:id/checkbox"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/file_name"
        app:layout_constraintTop_toBottomOf="@id/file_name"
        style="@style/FileTextAppearance.FileSize" />
    <TextView
        android:textSize="@dimen/group_list_video_duration_text_size"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@id/video_duration"
        android:background="@drawable/grid_video_duration_bg"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/group_list_video_duration_height"
        android:layout_marginBottom="@dimen/group_list_video_duration_margin"
        android:text="00:02:00"
        android:fontFamily="sans-serif"
        android:paddingStart="@dimen/group_list_video_duration_padding"
        android:paddingEnd="@dimen/group_list_video_duration_padding"
        app:layout_constraintBottom_toBottomOf="@id/file_icon"
        app:layout_constraintEnd_toEndOf="@id/file_icon"
        app:layout_constraintStart_toStartOf="@id/file_icon" />
    <CheckBox
        android:theme="@style/Checkbox_NewStyle"
        android:id="@android:id/checkbox"
        android:focusable="false"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</com.android.fileexplorer.view.VideoListItemV2>