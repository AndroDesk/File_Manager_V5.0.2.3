<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@id/actionbar_search"
        android:layout_width="@dimen/actionbar_icon_size"
        android:layout_height="@dimen/actionbar_icon_size"
        android:src="@drawable/ic_actionbar_search"
        android:contentDescription="@string/menu_item_search"
        android:layout_marginEnd="@dimen/fab_expand_item_up_margin_start" />
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@id/download"
        android:layout_width="@dimen/actionbar_icon_size"
        android:layout_height="@dimen/actionbar_icon_size"
        android:src="@drawable/ic_download"
        android:contentDescription="@string/ad_download"
        android:layout_marginEnd="@dimen/fab_expand_item_up_margin_start" />
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@id/more_settings"
        android:layout_width="@dimen/actionbar_icon_size"
        android:layout_height="@dimen/actionbar_icon_size"
        android:src="@drawable/ic_actionbar_more"
        android:contentDescription="@string/tab_more" />
</LinearLayout>