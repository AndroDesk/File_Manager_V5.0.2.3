<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="@dimen/fab_expand_recycler_height"
    android:paddingStart="@dimen/fab_expand_padding"
    android:paddingEnd="@dimen/fab_expand_padding"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:textSize="@dimen/fab_expand_item_title_size"
        android:textColor="@color/fab_text_color_selector"
        android:ellipsize="none"
        android:id="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:fontFamily="sans-serif" />
    <ImageView
        android:id="@id/up"
        android:background="@drawable/fab_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fab_expand_item_up_margin_top"
        android:layout_marginBottom="@dimen/fab_expand_item_up_margin_bottom"
        android:importantForAccessibility="no"
        android:layout_marginStart="@dimen/fab_expand_item_up_margin_start"
        android:layout_marginEnd="@dimen/fab_expand_item_up_margin_end"
        android:layout_toEndOf="@id/title" />
    <ImageView
        android:id="@id/down"
        android:background="@drawable/fab_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/fab_expand_item_up_margin_top"
        android:layout_below="@id/up"
        android:importantForAccessibility="no"
        android:layout_alignEnd="@id/up" />
</RelativeLayout>