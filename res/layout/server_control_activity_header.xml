<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="0.0dip"
    android:layout_weight="1.0"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@id/wifi_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@id/wifi_state_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/server_control_wifi_state_label"
            android:textColor="@color/ftp_wifi_state_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:text="@string/wifi_state"
            android:singleLine="true"
            android:fontFamily="sans-serif"
            style="@style/Miuix.AppCompat.TextAppearance.Large" />
        <TextView
            android:id="@id/instruction_pre"
            android:visibility="gone"
            style="@style/FtpMessageStyle" />
        <TextView
            android:id="@id/instruction"
            android:text="@string/instruction"
            style="@style/FtpMessageStyle" />
        <TextView
            android:textSize="@dimen/server_control_secondary_msg_text_size"
            android:textColor="@color/common_color_blue"
            android:ellipsize="marquee"
            android:gravity="center"
            android:id="@id/ip_address"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/server_control_ip_address_margin_instruction"
            android:minWidth="100.0dip"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:fontFamily="sans-serif" />
    </LinearLayout>
</LinearLayout>