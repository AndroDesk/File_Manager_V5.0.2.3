<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_enabled="true"
        android:state_pressed="true">
        <shape>
            <corners
                android:radius="@dimen/confirm_btn_corner_radius" />
            <solid
                android:color="@color/reminder_btn_blue_background_pressed_DayNight" />
        </shape>
    </item>
    <item
        android:state_enabled="true"
        android:state_pressed="false">
        <shape>
            <corners
                android:radius="@dimen/confirm_btn_corner_radius" />
            <solid
                android:color="@color/reminder_btn_blue_background_DayNight" />
        </shape>
    </item>
    <item
        android:state_enabled="false">
        <shape>
            <corners
                android:radius="@dimen/confirm_btn_corner_radius" />
            <solid
                android:color="@color/reminder_btn_blue_background_disable_DayNight" />
        </shape>
    </item>
</selector>