<?xml version="1.0" encoding="utf-8"?>
<com.android.fileexplorer.mirror.view.MirrorEmptyView
    android:layout_gravity="center"
    android:id="@id/empty_view_maml"
    android:layout_width="@dimen/maml_view_size"
    android:layout_height="@dimen/maml_view_size"
    android:contentDescription="@string/no_file"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_gravity="center"
        android:id="@id/iv_empty"
        android:layout_width="80.0px"
        android:layout_height="80.0px"
        android:src="@drawable/ic_empty_view" />
    <ProgressBar
        android:layout_gravity="center"
        android:id="@id/progressbar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no" />
    <TextView
        android:gravity="center"
        android:layout_gravity="bottom"
        android:id="@id/empty_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20.0px"
        android:text="@string/no_file"
        android:importantForAccessibility="no"
        style="@style/empty_file_list_hint_style_mirror" />
</com.android.fileexplorer.mirror.view.MirrorEmptyView>