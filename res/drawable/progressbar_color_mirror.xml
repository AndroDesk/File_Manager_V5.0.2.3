<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background">
        <shape>
            <corners
                android:radius="6.0px" />
            <solid
                android:color="@color/mirror_progress_bar_bg_color" />
        </shape>
    </item>
    <item
        android:id="@android:id/progress">
        <clip>
            <shape>
                <corners
                    android:radius="6.0px" />
                <solid
                    android:color="@color/mirror_progress_bar_pb_color" />
            </shape>
        </clip>
    </item>
</layer-list>