<?xml version="1.0" encoding="utf-8"?>
<com.android.fileexplorer.view.EmptyTriggerFrameLayout
    android:id="@id/emptyTriggerFl"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <miuix.nestedheader.widget.NestedHeaderLayout
        android:id="@id/nested_header_layout"
        android:clipChildren="false"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:headerAutoClose="false"
        app:headerView="@id/header"
        app:scrollType="offset"
        app:scrollableView="@id/springbacklayout"
        app:selfScrollFirst="false"
        app:stickyView="@id/sticky_view">
        <View
            android:id="@id/header"
            android:layout_width="fill_parent"
            android:layout_height="1.0px" />
        <miuix.springback.view.SpringBackLayout
            android:id="@id/springbacklayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            app:scrollOrientation="vertical|angle"
            app:scrollableView="@android:id/list">
            <androidx.core.widget.NestedScrollView
                android:id="@id/scrollview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:fillViewport="true">
                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <include
                        android:visibility="gone"
                        layout="@layout/layout_empty_view_maml" />
                </FrameLayout>
            </androidx.core.widget.NestedScrollView>
            <com.android.fileexplorer.view.indicator.RecentRecyclerView
                android:id="@android:id/list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:overScrollMode="ifContentScrolls"
                style="@style/RecyclerView_Padding" />
        </miuix.springback.view.SpringBackLayout>
        <FrameLayout
            android:orientation="vertical"
            android:id="@id/sticky_view"
            android:visibility="visible"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/group_header_height" />
    </miuix.nestedheader.widget.NestedHeaderLayout>
    <RelativeLayout
        android:gravity="center_horizontal"
        android:layout_gravity="bottom"
        android:id="@id/action_button_import_files"
        android:background="@color/button_view_background"
        android:paddingTop="@dimen/button_padding"
        android:paddingBottom="@dimen/button_padding"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/button_view_height"
        android:layout_marginBottom="@dimen/cloud_login_button_margin_bottom">
        <Button
            android:textSize="17.0sp"
            android:textColor="@color/white"
            android:id="@id/action_button"
            android:background="@drawable/btn_bg_cleaner_action"
            android:layout_width="@dimen/common_begin_btn_width"
            android:layout_height="@dimen/common_begin_btn_height"
            android:text="@string/import_files_from_old_phones"
            android:layout_alignParentBottom="true"
            android:fontFamily="mipro-medium"
            android:layout_marginStart="@dimen/common_begin_btn_margin"
            android:layout_marginEnd="@dimen/common_begin_btn_margin" />
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@id/scrollview2"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <include
                android:id="@id/no_permission_res"
                layout="@layout/no_permission_background" />
        </FrameLayout>
    </androidx.core.widget.NestedScrollView>
</com.android.fileexplorer.view.EmptyTriggerFrameLayout>