<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@id/path_item"
        android:background="@drawable/path_galley_bg"
        android:fontFamily="sans-serif"
        android:layoutDirection="locale"
        style="@style/PathItemTextStyleR.Mirror" />
    <ImageView
        android:id="@id/path_arrow"
        android:layout_width="@dimen/mirror_file_gallery_icon_width"
        android:layout_height="wrap_content"
        android:src="@drawable/mirror_forward_disable"
        android:layout_marginEnd="@dimen/mirror_file_gallery_icon_margin_end" />
</LinearLayout>