<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:id="@id/view_type_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/fab_expand_padding"
        android:paddingEnd="@dimen/fab_expand_padding">
        <ImageView
            android:layout_gravity="start"
            android:id="@id/view_list"
            android:background="@drawable/selector_menu_view_type_list"
            android:layout_width="@dimen/selector_menu_view_height"
            android:layout_height="@dimen/selector_menu_view_height"
            android:contentDescription="@string/list_mode" />
        <ImageView
            android:layout_gravity="end"
            android:id="@id/view_grid"
            android:background="@drawable/selector_menu_view_type_grid"
            android:layout_width="@dimen/selector_menu_view_height"
            android:layout_height="@dimen/selector_menu_view_height"
            android:contentDescription="@string/grid_mode" />
    </FrameLayout>
    <View
        android:id="@id/divider"
        android:background="@color/fab_expand_divider_color"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginTop="@dimen/fab_expand_divider_margin_top"
        android:layout_marginBottom="@dimen/fab_expand_divider_margin_bottom"
        android:layout_marginStart="@dimen/fab_expand_divider_margin"
        android:layout_marginEnd="@dimen/fab_expand_divider_margin" />
    <miuix.recyclerview.widget.RecyclerView
        android:id="@id/recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</merge>