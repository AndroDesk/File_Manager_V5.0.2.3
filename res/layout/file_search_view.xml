<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:orientation="vertical"
    android:id="@id/search_category_scrollview"
    android:paddingBottom="20.0dip"
    android:visibility="gone"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.android.fileexplorer.adapter.search.SearchView
        android:orientation="vertical"
        android:id="@id/search_category"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TextView
            android:textSize="@dimen/search_category_text_size"
            android:textColor="@color/group_header_text_color"
            android:gravity="center_vertical"
            android:id="@id/search_by_category"
            android:paddingTop="@dimen/search_header_padding_top"
            android:paddingBottom="@dimen/search_header_padding_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12.0dip"
            android:textDirection="locale"
            android:layout_marginStart="@dimen/suggest_layout_margin_start" />
        <com.google.android.flexbox.FlexboxLayout
            android:id="@id/search_suggest_category_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:layout_marginStart="@dimen/suggest_layout_margin_start"
            android:layout_marginEnd="@dimen/suggest_layout_margin_start"
            app:flexDirection="row"
            app:flexWrap="wrap" />
        <miuix.appcompat.widget.Spinner
            android:id="@id/split_line"
            android:background="#1a000000"
            android:layout_width="fill_parent"
            android:layout_height="2.0px"
            android:layout_marginLeft="28.0dip"
            android:layout_marginTop="16.0dip"
            android:layout_marginRight="28.0dip"
            android:layout_marginBottom="16.0dip"
            android:layout_marginHorizontal="28.0dip"
            android:layout_marginVertical="16.0dip" />
        <TextView
            android:textSize="@dimen/search_category_text_size"
            android:textColor="@color/group_header_text_color"
            android:gravity="center_vertical"
            android:id="@id/search_by_src"
            android:paddingTop="@dimen/search_header_padding_top"
            android:paddingBottom="@dimen/search_header_padding_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textDirection="locale"
            android:layout_marginStart="@dimen/suggest_layout_margin_start" />
        <com.google.android.flexbox.FlexboxLayout
            android:id="@id/search_suggest_app_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:layout_marginStart="@dimen/suggest_layout_margin_start"
            android:layout_marginEnd="@dimen/suggest_layout_margin_start"
            app:flexDirection="row"
            app:flexWrap="wrap" />
    </com.android.fileexplorer.adapter.search.SearchView>
</ScrollView>