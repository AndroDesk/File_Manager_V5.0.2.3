        android:layout_weight="1.0"
        android:layout_marginStart="@dimen/file_grid_horizontal_margin"
        layout="@layout/file_grid_item_with_fav" />
    <include
        android:id="@id/file_grid_item_with_fav_4"
        android:layout_width="0.0dip"
