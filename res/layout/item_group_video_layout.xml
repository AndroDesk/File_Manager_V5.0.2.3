<?xml version="1.0" encoding="utf-8"?>
<com.android.fileexplorer.view.VideoGroupItem
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:foreground="@drawable/pic_cover_phone"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:orientation="vertical"
        android:id="@id/image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="center"
        android:cropToPadding="true"
        android:layout_centerInParent="true" />
    <ImageView
        android:id="@id/ic_video_tag_view"
        android:layout_width="@dimen/recent_video_tag_size"
        android:layout_height="@dimen/recent_video_tag_size"
        android:layout_marginTop="@dimen/fav_tag_margin"
        android:src="@drawable/ic_video_tag_recent"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/fav_tag_margin"
        android:layout_alignParentStart="true" />
    <CheckBox
        android:theme="@style/Checkbox_NewStyle"
        android:id="@android:id/checkbox"
        android:focusable="false"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/checkbox_margin"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />
</com.android.fileexplorer.view.VideoGroupItem>