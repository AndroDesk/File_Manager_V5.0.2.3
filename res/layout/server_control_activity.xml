<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:scrollbars="none"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <include
            android:gravity="center_horizontal"
            android:id="@id/layout_header"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_marginTop="@dimen/server_control_content_margin_top"
            android:layout_weight="1.0"
            layout="@layout/server_control_activity_header" />
        <RelativeLayout
            android:gravity="center"
            android:id="@id/start_stop_button_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/ftp_bottom_btn_bg_selector"
                android:layout_width="@dimen/common_begin_btn_width"
                android:layout_height="@dimen/common_begin_btn_height"
                android:layout_marginTop="@dimen/common_begin_btn_margin"
                android:layout_marginBottom="@dimen/group_item_margin_server_control_button_normal"
                android:layout_marginStart="@dimen/common_begin_btn_margin"
                android:layout_marginEnd="@dimen/common_begin_btn_margin">
                <TextView
                    android:textSize="@dimen/ftp_start_btn_test_size"
                    android:textColor="@color/ftp_bottom_text_color_selector"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@id/start_stop_button_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/ftp_start_btn_drawable_padding"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>