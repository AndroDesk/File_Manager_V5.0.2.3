<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    android:background="@color/fe_primary_color"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/file_item_height_phone"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/group_item_margin"
        android:paddingEnd="@dimen/group_item_margin">
        <ImageView
            android:id="@id/volume_icon"
            style="@style/FileIconStylePhone" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:layout_marginStart="16.0dip">
            <TextView
                android:textSize="@dimen/text_size_storage_volume_info_des"
                android:textColor="@color/text_color_primary"
                android:id="@id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                style="@style/FileTextAppearance.FileName" />
            <TextView
                android:textSize="@dimen/secondary_text_size"
                android:textColor="@color/text_color_storage_info"
                android:id="@id/space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.0dip"
                android:singleLine="true"
                android:fontFamily="sans-serif" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>