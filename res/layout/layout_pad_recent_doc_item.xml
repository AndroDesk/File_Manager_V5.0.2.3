<?xml version="1.0" encoding="utf-8"?>
<com.android.fileexplorer.view.GridItemView
    android:id="@id/view_root"
    android:layout_width="72.0dip"
    android:layout_height="wrap_content"
    android:maxWidth="72.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@id/file_icon_region"
        android:layout_width="@dimen/common_grid_item_size"
        android:layout_height="@dimen/common_grid_item_size"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@id/file_icon"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>
    <ViewStub
        android:id="@id/stub_checkbox"
        android:layout="@layout/stub_checkbox_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/group_grid_checkbox_margin"
        android:layout_marginEnd="@dimen/group_grid_checkbox_margin"
        app:layout_constraintBottom_toBottomOf="@id/file_icon_region"
        app:layout_constraintEnd_toEndOf="@id/file_icon_region" />
    <TextView
        android:textSize="@dimen/group_grid_file_name_text_size"
        android:textColor="@color/group_file_name_color"
        android:gravity="center_horizontal"
        android:id="@id/file_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/group_grid_file_name_margin"
        android:maxLines="2"
        android:fontFamily="sans-serif"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/file_icon_region" />
    <TextView
        android:textSize="@dimen/group_grid_file_source_text_size"
        android:textColor="@color/group_file_source_color"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:id="@id/file_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/group_grid_file_source_margin"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/file_name" />
    <ImageView
        android:id="@id/favorite"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="0.0dip"
        android:src="@drawable/ic_fav"
        android:layout_marginEnd="4.0dip"
        app:layout_constraintBottom_toBottomOf="@id/file_source"
        app:layout_constraintEnd_toStartOf="@id/file_cloud_state"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/file_source" />
    <ImageView
        android:id="@id/file_cloud_state"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="0.0dip"
        android:src="@drawable/ic_file_state_cloud"
        android:layout_marginEnd="4.0dip"
        app:layout_constraintBottom_toBottomOf="@id/file_source"
        app:layout_constraintEnd_toStartOf="@id/file_source"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/favorite"
        app:layout_constraintTop_toTopOf="@id/file_source" />
    <TextView
        android:textSize="@dimen/group_grid_file_source_text_size"
        android:textColor="@color/group_file_source_color"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:id="@id/file_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/group_grid_file_source_margin"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/file_cloud_state"
        app:layout_constraintTop_toBottomOf="@id/file_size" />
</com.android.fileexplorer.view.GridItemView>