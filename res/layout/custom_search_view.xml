<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layoutDirection="locale"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@id/search_container"
        android:background="?searchEditTextBackground"
        android:layout_width="0.0dip"
        android:layout_height="@dimen/search_edittext_height"
        android:layout_weight="1.0"
        android:layout_marginEnd="@dimen/search_edit_text_margin_end">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?searchEditTextIconStart"
            android:paddingStart="@dimen/edit_text_search_bg_icon_padding_start"
            android:paddingEnd="@dimen/miuix_appcompat_edit_text_search_bg_icon_padding_end" />
        <com.android.fileexplorer.search.SearchTagView
            android:textSize="@dimen/search_input_text_tag_size"
            android:textColor="#ffffffff"
            android:gravity="center_vertical"
            android:id="@id/search_tag_view"
            android:background="@drawable/search_tag_bg"
            android:paddingLeft="6.0dip"
            android:paddingRight="6.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4.0dip"
            android:paddingHorizontal="6.0dip" />
        <com.android.fileexplorer.view.SearchEditText
            android:textSize="@dimen/search_input_text_size"
            android:textColor="@color/search_text_hint_color"
            android:textColorHint="@color/text_color_tertiary"
            android:ellipsize="end"
            android:id="@android:id/input"
            android:background="@null"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLength="1024"
            android:textDirection="locale"
            android:textAlignment="viewStart"
            app:drawableEndCompat="?clearableEditTextIcon"
            style="?searchEditTextStyle" />
    </LinearLayout>
    <TextView
        android:textSize="@dimen/search_cancel_text_size"
        android:textColor="@color/search_cancel_text_color"
        android:gravity="center_vertical"
        android:id="@id/search_btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:contentDescription="@string/cancel"
        android:fontFamily="sans-serif-medium" />
</LinearLayout>